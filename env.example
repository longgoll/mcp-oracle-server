# Oracle MCP Server Configuration
# Copy this file to .env and fill in your specific values

# Oracle Database Connection
ORACLE_USER=your_oracle_username
ORACLE_PASSWORD=your_oracle_password
ORACLE_HOST=your_oracle_host
ORACLE_PORT=1521
ORACLE_SERVICE_NAME=your_service_name

# Oracle Client Configuration
ORACLE_CLIENT_PATH=path_to_your_instantclient

# Application Settings
EXPORT_DIRECTORY=path_to_export_directory
PYTHONPATH=path_to_your_src_directory

# Connection Pool Settings (optional)
POOL_MIN_CONNECTIONS=1
POOL_MAX_CONNECTIONS=5
POOL_INCREMENT=1

# Query Settings (optional)
MAX_ROWS_DISPLAY=100
DEFAULT_PAGE_SIZE=50
MAX_CSV_ROWS=10000
BATCH_SIZE=100

# Security Settings (optional)
PROTECTED_TABLES=table1,table2,table3
DANGEROUS_KEYWORDS=keyword1,keyword2,keyword3